@{
    ViewBag.Title = "Despacho";
}
<br />
<div class="panel panel-primary">
    <div class="panel-body">
        <div id="alert_placeholder"></div>
        <h1><a>Ingreso a Despacho</a></h1>
        <form id='despacho' role="form" method="post" action="">
            <table class="table table-striped">
                <tr>
                    <td>No de Orden</td>
                    <td><input type="text" maxlength="20" placeholder="No de Orden" class="form-contol numero" id="NodeOrden" /></td>
                    <td>Fecha</td>
                    <td>
                        <div class="input-group date" data-provide="datepicker">
                            <input type="text" class="form-control">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-th"></span>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>Referencia</td>
                    <td><input type="text" maxlength="200" placeholder="Número de Referencia" class="form-contol numero" id="NumeroReferencia" /></td>
                    <td>Medicamento</td>
                    <td colspan="3"><input type="text" placeholder="Medicamento" class="form-control" id="Medicamento" /></td>
                </tr>
                <tr>
                    <td >Cantidad</td>
                    <td><input type="text" maxlength="20" placeholder="Cantidad" class="form-contol numero" id="Cantidad" /></td>
                </tr>
                <tr>
                    <td colspan="4" align="center">
                        <input type="submit" value="GENERAR" class="btn-primary" />
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>
<script>
    $('#dvFecha').datepicker({
        languaje: "es",
        autoclose: true,
        format: 'dd/mm/yyyy',
        todayHighlight: true
    });

    $('.numero').keyup(function () {
        this.value = this.value.replace(/[^0-9\.]/g, '');
    });

    $('#despacho').submit(function (evt) {
        if ($('#NodeOrden').val().length < 2) {
            bootstrap_alert.warning('El Numero de Orden debe tener mínimo 2 digitos')
            return false;
        }
    });

    bootstrap_alert = function () { };
    bootstrap_alert.warning = function (mensage) {
        $('#alert_placeholder').
        html('<div class = "alert alert-danger"><a class = "close" data-dismiss = "alert">x</a>'
        + mensage + '</spant><div>'
        );
    };

    $.validate({
        validateOnBlur: false, //disable validation when input looses
        errorMessagePosition: 'top',//instead of 'inline' which is default
        scrollToTopOnError: true,//set this property to true on longer forms
        languaje: spanishLanguaje
    });
</script>
<h2>Despacho</h2>

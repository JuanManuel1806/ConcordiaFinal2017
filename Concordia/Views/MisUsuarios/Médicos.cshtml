@{
    ViewBag.Title = "Médicos";
}
<br />
<div class="panel panel-primary">
    <div class="panel-body">
        <h1>Ingreso Médico</h1>
        <form id="medico" role="form" method="post" action="">
            <table class="table table-striped">
                <tr>
                    <td>Número tarjeta profesional</td>
                    <td><input type="Text" maxlength="10" placeholder="Número de Documento"class="form-contol numero" id="NumeroTarjeta" /></td>
                </tr>
                <tr>
                    <td>Primer Nombre</td>
                    <td><input type="text" class="form-control" id="PrimerNombre" /></td>
                    <td>Segundo Nombre</td>
                    <td><input type="text" class="form-control" id="SegundoNombre" /></td>
                </tr>
                <tr>
                    <td>Primer Apellido</td>
                    <td><input type="text" class="form-control" id="PrimerApellido" /></td>
                    <td>Segundo Apellido</td>
                    <td><input type="text" class="form-control" id="SegundoApellido" /></td>
                </tr>
                <tr>

                    <td>Especialidad</td>
                    <td>
                        <select class="form-control" id="tipoDocumento">
                            <option></option>
                            <option>Médico general</option>
                            <option>Médico cirugía</option>
                            <option>SSO</option>
                            </select>
                    </td>
                    <td>Disponibilidad</td>
                    <td>
                        <select class="form-control" id="tipoDocumento">
                            <option></option>
                            <option>Mañana</option>
                            <option>Tarde</option>
                            <option>Noche</option>
                            </select>
                    </td>
                    <tr>
                    <td colspan="4"> </br></td>
                </tr>
                <tr>
                    <td colspan="2" align="right">
                        <input type="submit" value="Nuevo" class="btn-primary" />
                    </td>
                    <td colspan="2" align="right">
                        <input type="submit" value="Guardar" class="btn-primary" />
                    </td>
                    <tr>
                    <td colspan="2" align="right">
                        <input type="submit" value="Modificar" class="btn-primary" />
                    <td colspan="2" align="right">
                        <input type="submit" value="Borrar" class="btn-primary" />
                    </td>
                        </tr>       
                    </td>
                </tr>
            </table>
        </form>   
    </div>
</div>

<script>
    $('.numero').keyup(function () {
        this.value = this.value.replace(/[^0-9\.]/g, '');
    });

    $('#medico').submit(function (evt) {
        if ($('#NumeroTarjeta').val().length < 2) {
            bootstrap_alert.warning('El numero de Referencia debe tener mínimo 2 digitos')
            return false;
        }
    });

    bootstrap_alert = function () { };
    bootstrap_alert.warning = function (mensage) {
        $('#alert_placeholder').
        html('<div class = "alert alert-danger"><a class = "close" data-dismiss = "alert">x</a><span>'
        + mensage + '</spant><div>'
        );
    };
    $.validate({
        validateOnBlur: false, //disable validation when input looses
        errorMessagePosition: 'top',//instead of 'inline' which is default
        scrollToTopOnError: true,//set this property to true on longer forms
        languaje: spanishLanguaje
    });

</script>
